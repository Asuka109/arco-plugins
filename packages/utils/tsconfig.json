{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "declaration": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
